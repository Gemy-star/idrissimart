# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-generate_secret_key.py
DJANGO_DEBUG=False
DJANGO_SETTINGS_MODULE=idrissimart.settings.docker

# Database Configuration
DB_NAME=idrissimartdb
DB_USER=idrissimart
DB_PASSWORD=your-database-password-here
DB_HOST=127.0.0.1
DB_PORT=3306

# Email Configuration (if using)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Paths
DJANGO_LOG_FILE=/var/log/django/idrissimart.log
FILE_UPLOAD_TEMP_DIR=/tmp

# Security (Production)
# These should match your domain
ALLOWED_HOSTS=idrissimart.com,www.idrissimart.com

# Optional: Custom admin URL (for security)
# ADMIN_URL=secret-admin-path/

# Payment Gateway Configuration - Paymob (Egypt)
PAYMOB_API_KEY=your-paymob-api-key-here
PAYMOB_SECRET_KEY=your-paymob-secret-key-here
PAYMOB_PUBLIC_KEY=your-paymob-public-key-here
PAYMOB_IFRAME_ID=your-iframe-id-here
PAYMOB_INTEGRATION_ID=your-integration-id-here
PAYMOB_HMAC_SECRET=your-hmac-secret-here

# Payment Gateway Configuration - PayPal (International)
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-here
PAYPAL_MODE=sandbox  # sandbox or live

# Email Service - SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here

# SMS Service - Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=your-twilio-phone-number-here
